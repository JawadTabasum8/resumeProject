@model Education
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form method="post" asp-controller="Admin" asp-action="UpdateEducation">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h1>
                            Update Education
                        </h1>
                        <hr />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="InstuteName"></label>
                        <input class="form-control" asp-for="InstuteName" />
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="StartDate"></label>
                        <input class="form-control" asp-for="StartDate" />
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="EndDate"></label>
                        <input class="form-control" asp-for="EndDate" />
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Degree"></label>
                        <input class="form-control" asp-for="Degree" />
                    </div>
                </div>

                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <input type="submit" value="Update Education" class="btn btn-warning" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>