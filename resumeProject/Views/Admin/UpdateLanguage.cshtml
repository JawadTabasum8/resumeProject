@model Language
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form method="post" asp-controller="Admin" asp-action="UpdateLanguage">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h1>
                            Update Language
                        </h1>
                        <hr />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Percentage"></label>
                        <input class="form-control" asp-for="Percentage" />
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <input type="submit" value="Update Language" class="btn btn-warning" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>