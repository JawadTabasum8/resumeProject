@model Experince
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form method="post" asp-controller="Admin" asp-action="Experiance">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h1>
                            Add Experiance
                        </h1>
                        <hr />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="JobTitle"></label>
                        <input class="form-control" asp-for="JobTitle" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="StartDate"></label>
                        <input class="form-control" asp-for="StartDate" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="EndDate"></label>
                        <input class="form-control" asp-for="EndDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Description"></label>
                        <input class="form-control" asp-for="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <input type="submit" value="Add Experiance" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>