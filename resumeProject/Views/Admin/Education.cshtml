@model Education
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form method="post" asp-controller="Admin" asp-action="Education">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h1>
                            Add Education
                        </h1>
                        <hr />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="InstuteName"></label>
                        <input class="form-control" asp-for="InstuteName" />
                        <span asp-validation-for="InstuteName" class="text-danger"></span>
                    </div>
                </div>
                <br/>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="StartDate"></label>
                        <input class="form-control" asp-for="StartDate" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <br/>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="EndDate"></label>
                        <input class="form-control" asp-for="EndDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Degree"></label>
                        <input class="form-control" asp-for="Degree" />
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                </div>
               
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <input type="submit" value="Add Education" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>