@model IEnumerable<Skill >

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1>Show All Skills</h1>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Percentage</th>
                        <th scope="col" colspan="2" >Aaction</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.id</th>
                        <td>@item.Name</td>
                        <td>@item.Percentage</td>
                        <td>
                                <a class="btn btn-primary text-center" asp-action="UpdateSkill" asp-controller="Admin" asp-route-id="@item.id">Update</a>
                                <a class="btn btn-danger text-center" asp-action="DeleteSkill" asp-controller="Admin" asp-route-id="@item.id">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>